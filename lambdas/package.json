{
  "name": "ticketbottle-payment-lambdas",
  "version": "1.0.0",
  "description": "AWS Lambda functions for TicketBottle Payment Service",
  "private": true,
  "main": "index.js",
  "scripts": {
    "prisma:gen": "prisma generate",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "build:clean": "tsc --build --clean",
    "build:layers": "node scripts/build-layers.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "local:setup": "./scripts/localstack-setup.sh",
    "local:deploy": "./scripts/deploy-to-dev-compose.sh",
    "local:teardown": "./scripts/localstack-teardown.sh",
    "local:test": "./scripts/integration-test.sh",
    "local:debug": "./scripts/debug-lambda.sh",
    "local:logs": "awslocal logs tail /aws/lambda/payment-webhook-handler --follow",
    "local:logs:processor": "awslocal logs tail /aws/lambda/outbox-processor --follow",
    "local:logs:cleanup": "awslocal logs tail /aws/lambda/outbox-cleanup --follow"
  },
  "dependencies": {
    "@payos/node": "^2.0.3",
    "@prisma/client": "^6.17.0",
    "axios": "^1.12.2",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.19",
    "kafkajs": "^2.2.4",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "esbuild": "^0.27.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^6.17.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Vo Gia An",
  "license": "MIT"
}
